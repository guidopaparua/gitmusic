<!DOCTYPE html>
<html lang="es">

<%- include ('.././partials/head')%>
    <!--STYLES.CSS-->
    <link rel="stylesheet" href="/css/styles.css">
    <link rel="stylesheet" href="/css/stylesIndex.css">
    <title>Git Music - Percusión</title>
    </head>

    <body>
        <%- include ('.././partials/header')%>
            <main>
                <!--Primera sección -->
                <section class="frase">
                    <h1>
                        Bienvenido a Git Music
                    </h1>
                </section>
                <!--Segunda sección-->
                <section>
                    <% productos.forEach((prod)=> { %>
                        <div class="productsGroup">
                            <article>
                                <form action="/products/carrito" method="post">
                                    <a href="/products/<%=prod.id%>" name="prodID">
                                        <img src="/images/<%=prod.image%>" alt="mundo" name="prodImage">
                                        <div class="articulo">
                                            <div class="autor-favorito">
                                                <h3>
                                                    <%=prod.title%>
                                                </h3>
                                                <i class="fas fa-heart"></i>
                                            </div>
                                            <div class="precio-descuento">
                                                <p class="precio" name="prodPrice">$<%=prod.price%>
                                                        <a href="/products/<%=prod.id%>"><i
                                                                class="fas fa-info-circle info"></i></a>
                                                </p>
                                                <!-- <a href="#agregar" class="comprar">Agregar</a> -->
                                                <!-- <button type="submit" class="comprar">Comprar</button> -->
                                            </div>
                                        </div>
                                    </a>
                                </form>

                            </article>
                        </div>
                        <% }) %>
                </section>
            </main>
            <%- include ('.././partials/footer')%>
    </body>

</html>