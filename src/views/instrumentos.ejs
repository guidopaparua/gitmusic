<!DOCTYPE html>
<html lang="es">

<%- include ('./partials/head')%>
    <!--STYLES.CSS-->
    <link rel="stylesheet" href="/css/styles.css">
    <link rel="stylesheet" href="/css/stylesIndex.css">
    <title>Git Music</title>
    </head>

    <body>
        <%- include ('./partials/header')%>
            <main>
                <!--Primera sección -->
                <section class="frase">
                    <h1>
                        Bienvenido a Git Music
                    </h1>
                </section>
                <!--Segunda sección-->
                <section>
                    <div class="titulos-productos">
                        <h3>NUESTROS PRODUCTOS</h3>
                    </div>
                    <div class="products">
                        <!-- ejemplo para traer desde db -->
                        <% products.forEach(element=>{%>
                            <article> <a href="/products/<%= element.id %>">
                                    <img src="/images/products/<%= element.imagen %>">
                                    <div class="main-article">
                                        <p class="price">
                                            <%= element.price %>
                                        </p>
                                    </div>
                                </a>
                            </article>
                            <% }) %>
                    </div>
                </section>
                <!--Tercera sección-->
                <section class="banner-publicidad">
                    <div>
                        Añadir aquí la autopauta
                    </div>
                </section>
                <h3>Acá tenemos que ver que poner</h3>
                <section class="offers">
                    <div class="products">

                    </div>
                </section>
                <h3>CRUD</h3>
                <nav>
                    <ul>
                        <li>
                            <a href="/Products/create" class="crearP">Crear producto</a>
                        </li>
                        <li>
                            <a href="/Products" class="listaP">Listado de productos</a>
                        </li>
                    </ul>
                </nav>
            </main>
            <%- include ('./partials/footer')%>
    </body>

</html>